<?xml version="1.0" encoding="UTF-8"?>
<project name="cicd-mvc-ant" default="war">

<path id="compile.classes">
	<fileset dir="WebContent/WEB-INF/lib">
		<include name="*.jar" />
	</fileset>
</path>

<target name="clean">
	<delete dir="dist" />
	<delete dir="build" />
</target>

<target name="init">
	<mkdir dir="build/classes" />
	<mkdir dir="dist" />
</target>

<target name="compile" depends="init">
	<javac target="11" includeantruntime="false" srcdir="src" destdir="build/classes" debug="true">
		<classpath refid="compile.classes" />
	</javac>
</target>

<target name="war" depends="clean,compile">
	<war destfile="dist/cicd-mvc-ant.war" webxml="WebContent/WEB-INF/web.xml">
		<fileset dir="WebContent" />
		<lib dir="WebContent/WEB-INF/lib" />
		<classes dir="build/classes" />
	</war>
</target>

</project>
